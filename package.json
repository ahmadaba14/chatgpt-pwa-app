{
  "name": "chatgpt-pwa-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:launch": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:dev": "concurrently \"npm:dev\" \"npm:electron:wait-and-launch\"",
    "electron:wait-and-launch": "wait-on tcp:5173 && npm run electron:launch",
    "electron:package": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vite-pwa/assets-generator": "^0.2.5",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-builder": "^24.6.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.16.7",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.openai.chatgpttabs",
    "productName": "ChatGPT Multi-Tab PWA",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public/icons"
    },
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "public/icons/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "public/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "ChatGPT Multi-Tab PWA"
    }
  }
}
